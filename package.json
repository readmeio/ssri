{
  "name": "@readme/ssri",
  "version": "1.0.0",
  "description": "Standard Subresource Integrity library -- parses, serializes, generates, and verifies integrity metadata according to the SRI spec.",
  "license": "MIT",
  "author": "ReadMe <support@readme.io> (https://readme.com)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=14"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/readmeio/ssri.git"
  },
  "bugs": {
    "url": "https://github.com/readmeio/ssri/issues"
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint . --ext .js,.ts",
    "prebuild": "rm -rf dist/",
    "prepack": "npm run build",
    "pretest": "npm run lint",
    "prettier": "prettier --list-different --write \"./**/**.{js,ts}\"",
    "release": "npx conventional-changelog-cli -i CHANGELOG.md -s",
    "test:browser": "karma start --single-run",
    "test:browser:chrome": "karma start --browsers=Chrome --single-run=false",
    "test:browser:debug": "karma start --single-run=false",
    "test": "nyc mocha \"test/**/*.test.ts\""
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@readme/eslint-config": "^10.1.1",
    "@types/chai": "^4.3.3",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.8.3",
    "chai": "^4.3.6",
    "eslint": "^8.24.0",
    "mocha": "^10.0.0",
    "nyc": "^15.1.0",
    "prettier": "^2.7.1",
    "tap": "^16.3.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "minipass": "^3.3.4"
  }
}
